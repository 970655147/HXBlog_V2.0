    <!--</servlet-mapping>-->

    <listener>
        <display-name>initContextListener</display-name>
        <listener-class>com.hx.blog_v2.listener.InitializeContextListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/static/e/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/static/e/500.html</location>
    </error-page>

</web-app>